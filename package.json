{
  "name": "facts-kit",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "lint": "nx run ${NAME}:lint",
    "build": "nx run ${NAME}:build",
    "test": "nx run ${NAME}:test --verbose",
    "generate:lib": "npm run generate:js && npm run setup-typedoc",
    "generate:js": "nx generate @nx/js:library ${NAME} --unitTestRunner=vitest --bundler=swc --publishable --importPath=@facts-kit/${NAME} --compiler=swc",
    "setup-typedoc": "nx generate @enio.ai/typedoc:config ${NAME} && npm run update-typedoc-branch",
    "update-typedoc-branch": "node ./tools/scripts/setup-typedoc-config.mjs ${NAME}",
    "upgrade": "nx migrate latest && nx migrate --run-migrations",
    "install:ngx-deploy-npm": "nx generate ngx-deploy-npm:install",
    "fund": "bundlr fund 500000000000 -h https://node2.bundlr.network -w ${PATH_TO_WALLET} -c arweave",
    "balance": "bundlr balance ${WALLET} -h https://node2.bundlr.network -c arweave",
    "generate:package": "nx generate @nx/js:library ${NAME} --unitTestRunner=vitest --bundler=vite --compiler=swc --publishable --importPath=@facts-kit/${NAME} && npm run install:ngx-deploy-npm",
    "prepare": "husky install",
    "build-all": "nx run-many --targets=build --parallel=false --all",
    "version": "nx run-many --targets=version --parallel=false --all --releaseAs=${TYPE}",
    "publish": "npm run build-all && nx run-many --targets=deploy --parallel=false --all",
    "version:pre-release": "nx run workspace:version --releaseAs=prerelease --preid=${TYPE}",
    "generate:pure-js": "nx generate @nx/js:library ${NAME} --unitTestRunner=none --bundler=swc --publishable --importPath=@facts-kit/${NAME} --js --no-strict"
  },
  "private": true,
  "devDependencies": {
    "@bundlr-network/client": "0.10.5",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@enio.ai/typedoc": "^1.0.6",
    "@jscutlery/semver": "3.0.0",
    "@nx/eslint-plugin": "16.2.2",
    "@nx/js": "16.2.2",
    "@nx/linter": "16.2.2",
    "@nx/vite": "16.2.2",
    "@nx/workspace": "16.2.2",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.2.173",
    "@types/ramda": "0.28.23",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "@vitest/coverage-c8": "0.31.2",
    "@vitest/ui": "0.31.2",
    "arkb": "^1.1.61",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "ethers": "^5.5.3",
    "husky": "^8.0.0",
    "jsdom": "~20.0.3",
    "ngx-deploy-npm": "6.0.0",
    "nx": "16.2.2",
    "prettier": "^2.6.2",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.20",
    "typedoc-plugin-rename-defaults": "^0.6.4",
    "typedoc-theme-hierarchy": "^3.0.0",
    "typescript": "5.0.4",
    "vite": "4.3.9",
    "vite-plugin-dts": "~1.7.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.31.2"
  },
  "dependencies": {
    "@swc/helpers": "0.5.1",
    "arweave": "1.13.1",
    "arweave-account": "1.3.6",
    "bignumber.js": "^9.1.1",
    "ramda": "0.28.0",
    "warp-contracts": "1.4.5",
    "warp-contracts-plugin-deploy": "1.0.8"
  }
}
