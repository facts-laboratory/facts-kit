{
  "name": "facts-kit",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "generate:lib": "nx generate @nrwl/js:library ${NAME} --unitTestRunner=vitest --bundler=swc --publishable --importPath=@facts-kit/${NAME} --compiler=swc && npm run setup-typedoc",
    "setup-typedoc": "nx generate @enio.ai/typedoc:config ${NAME} && npm run update-typedoc-branch",
    "update-typedoc-branch": "node ./tools/scripts/setup-typedoc-config.mjs ${NAME}",
    "upgrade": "nx migrate latest && nx migrate --run-migrations",
    "install:ngx-deploy-npm": "nx generate ngx-deploy-npm:install",
    "fund": "bundlr fund 500000000000 -h https://node2.bundlr.network -w ${PATH_TO_WALLET} -c arweave",
    "balance": "bundlr balance ${WALLET} -h https://node2.bundlr.network -c arweave",
    "generate:package": "nx generate @nrwl/js:library ${NAME} --unitTestRunner=vitest --bundler=vite --compiler=swc --publishable --importPath=@facts-kit/${NAME} && npm run install:ngx-deploy-npm",
    "prepare": "husky install",
    "version": "nx run-many --targets=version --parallel=false --all --releaseAs=${TYPE}",
    "version:pre-release": "nx run workspace:version --releaseAs=prerelease --preid=${TYPE}"
  },
  "private": true,
  "devDependencies": {
    "@bundlr-network/client": "0.10.5",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@enio.ai/typedoc": "^1.0.6",
    "@jscutlery/semver": "^2.30.1",
    "@nrwl/eslint-plugin-nx": "15.8.6",
    "@nrwl/js": "15.8.6",
    "@nrwl/linter": "15.8.6",
    "@nrwl/vite": "15.8.6",
    "@nrwl/workspace": "15.8.6",
    "@swc/cli": "~0.1.55",
    "@swc/core": "^1.2.173",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitest/coverage-c8": "~0.25.8",
    "@vitest/ui": "^0.25.8",
    "arkb": "^1.1.61",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "ethers": "^5.5.3",
    "husky": "^8.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jsdom": "~20.0.3",
    "ngx-deploy-npm": "^5.2.0",
    "nx": "15.8.6",
    "prettier": "^2.6.2",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.20",
    "typedoc-plugin-rename-defaults": "^0.6.4",
    "typedoc-theme-hierarchy": "^3.0.0",
    "typescript": "4.9.5",
    "vite": "^4.0.1",
    "vite-plugin-dts": "~1.7.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^4.0.2",
    "vitest": "^0.25.8",
    "warp-contracts": "1.2.54"
  },
  "dependencies": {
    "@swc/helpers": "~0.4.11",
    "arweave": "1.13.1",
    "bignumber.js": "^9.1.1",
    "warp-contracts-plugin-deploy": "^1.0.0"
  }
}
